<body>
  <style>
    #post{
      text-decoration-color: black;
    }
  </style>

  <!-- ======= Header ======= -->
  <%-include('../common/header')%>

  <main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center mt-4">
          <h2>Blog</h2>
          <ol>
            <li><a href="/">Home</a></li>
            <li>Blog</li>
          </ol>
        </div>

      </div>
    </section><!-- End Breadcrumbs -->

    <!-- ======= Blog Section ======= -->
    <br><br>
    <style>
#s{
margin-left: 120px;

}
    </style>
    
    <form action="">
      <input type="text" name="search" placeholder="Search" id="s">
      <button type="submit"> Search</button>
    </form>
    <section id="blog" class="blog">
      <div class="container">

        <div class="row">

    
              <div class="col-lg-8 entries">
    
                <article class="entry" data-aos="fade-up">
                  <%if(displayData.length>0){
                    for(let data of displayData){%>
                      
                      <%if(data.status==true){%>
                  <div class="entry-img">
                    <img src="<%=data.image%>" alt=""class="img-fluid" >
                  </div>
                  
    
                  <h2 class="entry-title">
                    <a href="blog-single.html"><%=data.title%></a>
                  </h2>
                  
    
                  <div class="entry-meta">
                    <ul>
                      <li class="d-flex align-items-center"><i class="icofont-user"></i><%=data.user.name%></a></li>
                      <li class="d-flex align-items-center"><i class="icofont-wall-clock"></i> <%=data.createdAt.toDateString()%></time></a></li>
                      
                    </ul>
                  </div>
                  
    
                  <div class="entry-content">
                    <%let x=data.postText
                    const y=x.substring(0,x.indexOf('.',500))%>
                    <p>
                      <%=y%>...

                    </p>
                    <div class="read-more">
                      <a href="/viewpost/<%-data._id%>">Read More</a>
                    </div>
                  </div>
                  <br><br><br><br>
                  <%}}}%>
    
               
    
              </div><!-- End blog entries list -->

          <div class="col-lg-4">

            <div class="sidebar" data-aos="fade-left">

              
              

             <u><h3 class="sidebar-title">Recent Posts</h3></u> 
              <br>
              <%if(displayData.length>0){
                
                for(let data of displayData){%>
                  <%if(data.status==true){%>
            <div class="sidebar-item recent-posts">
              <div class="post-item clearfix" id="post">
                <a href="/viewpost/<%=data._id%>">
                  <img src="<%=data.image%>" alt="" height="80px" width="20px">
                  <h4><%=data.user.name%></h4>
                  <h4>Title:<%=data.title%></h4>
                       
                </div>
                </a>
                <br>
                <%}
              }}else{%>
                  <h3>No recent post</h3>
                  <%}%>

              </div>
              

                

              </div><!-- End sidebar recent posts-->

            </div><!-- End sidebar -->

          </div><!-- End blog sidebar -->

        </div>

      </div>
    </section><!-- End Blog Section -->

    <br><br>
    

   
    <% 
    for(let j=1;j<=totalpages;j++){%>
      <a href="?page=<%=j%>" id="pagination"><%=j%></a>

      <%}%>
  </main><!-- End #main -->


  <!-- ======= Footer ======= -->
  <%-include('../common/footer')%>

