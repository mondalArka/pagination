  <main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center mt-4">
          <h2>Register</h2>
          <ol>
            <li><a href="/">Home</a></li>
            <li>Register</li>
          </ol>
        </div>

      </div>
    </section><!-- End Breadcrumbs -->

    <!-- ======= Blog Section ======= -->
    <section id="blog" class="blog">
      <div class="container">
<h1>User Register</h1>


        <div class="container" >
            <%if(message.length>0){%>
                <div class="alert alert-success" role="alert">
                    <%=message%>
                </div>
                <%}%>
                
                <%if(message1.length>0){%>
                    <div class="alert alert-danger" role="alert">
                        <%=message1%>
                    </div>
                    <%}%>

    
            <div class="col-lg-10">
              
                <form action="/registration" method="post" enctype = "multipart/form-data">
                    
                    <div class="form-group row">
                        <label  class="col-sm-2 col-form-label">Name</label>
                        <div class="col-sm-6">
                          <input type="text" id="n" class="form-control" name="name" required>
                        </div>
                      </div>

                      <div class="form-group row">
                        <label  class="col-sm-2 col-form-label">Email</label>
                        <div class="col-sm-6">
                          <input type="email" id="n" class="form-control" name="email" required>
                        </div>
                      </div>
                      <div class="form-group row">
                        <label  class="col-sm-2 col-form-label">Phone</label>
                        <div class="col-sm-3">
                          <input type="number" id="n" class="form-control" name="phone" required>
                        </div>
                      </div>
                    </div>
                      <div class="form-group row">
                        <label  class="col-sm-2 col-form-label">Profile Picture</label>
                        <div class="col-sm-3">
                          <input type="file" id="n" class="form-control" name="image" required>
                        </div>
                      </div>

                    <div class="form-group row">
                      <label for="inputPassword" class="col-sm-2 col-form-label">Password</label>
                      <div class="col-sm-6">
                        <input type="password" class="form-control" name="password" required>
                      </div>
                    </div>

                    <div class="form-group row">
                        <label for="inputPassword" class="col-sm-2 col-form-label">Confirm Password</label>
                        <div class="col-sm-6">
                          <input type="password" class="form-control" name="confirm" required>
                        </div>
                      </div>
                      <center><button type="submit" class="btn btn-primary">Signup</button></center>
               
                  </form>
                  Already have an account? <a href="/login">Signin</a>
            </div>
  
        

        </div>

      </div>
    </section><!-- End Blog Section -->

