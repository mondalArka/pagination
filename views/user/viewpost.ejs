  <!-- ======= Header ======= -->
  <%-include('../common/header')%>

  <main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
      <div class="container">

        <div class="d-flex justify-content-between align-items-center mt-4">
          <h2>View Post</h2>
          <ol>
            <li><a href="/">Home</a></li>
            <li>View Post</li>
          </ol>
        </div>

      </div>
    </section><!-- End Breadcrumbs -->

    <!-- ======= Blog Section ======= -->
    <section id="blog" class="blog">
      <div class="container">
<h1>Post Details</h1>

<%if(message.length>0){%>
    <div class="alert alert-success" role="alert">
        <%=message%>
    </div>
    <%}%>
<div class="col-lg-8 entries">
    
    <article class="entry" data-aos="fade-up">
      
      <div class="entry-img">
        <img src="/<%=postData.image%>" height="500px" width="400px" >
      </div>
      

      <h2 class="entry-title">
        <a href="blog-single.html"><%=postData.title%></a>
      </h2>
      

      <div class="entry-meta">
        <ul>
          <li class="d-flex align-items-center"><i class="icofont-user"></i><%=postData.user.name%></a></li>
          <li class="d-flex align-items-center"><i class="icofont-wall-clock"></i> <%=postData.createdAt.toDateString()%></time></a></li>
          
        </ul>
      </div>
      

      <div class="entry-content">
        <p>
          <%=postData.postText%>
        </p>
        
      </div>
      
      
  </div>
        </div>

      </div>
    </div>
    <div class="container" >
        
    <h3>Add Comment</h3>
    <div class="col-lg-10">
      <form action="/comment_create/<%=postData._id%>" method="post">
        <div >
           
            <div>
                <label  class="col-sm-8 col-form-label">Your comment</label>
                <div class="col-sm-8">
                  <input type="text" id="n" class="form-control" name="comment" required>
                </div>
                <br><br>
                <button type="submit" class="btn btn-primary" class="col-sm-5" id="but">Add Comment</button>
          </form>

    </div>
    </div>
    <br><br>
    <div class="container">
        <%if(com.length>0){
            
            for(let data of com){
                if(data.status==true){
                  if(data.post._id==id){%>
             <span><img src="/<%=data.user.image%>" alt="" height ="20px" width="20px"> 
                <b><%=data.user.name%>:</b></span>  
                <br>
                
                <%=data.comment%>
                <br><br><br>
                <%}}}}%>
    </div>
    </section><!-- End Blog Section -->

